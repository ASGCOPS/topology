{% extends "base.html.j2" %}
{% block title -%}
Users
{%- endblock %}
{% block content %}
{% if not authorized %}
<div class="alert alert-info" role="alert">
  To see contact information, load your grid certificate into your browser.
</div>
{% endif %}
<div class="container">
  {%- for user in users %}
    <div class="row text-white bg-dark">
      <div class="col-sm"><span class=font-weight-bold>{{ user.FullName }}</span></div>
      <div class="col-sm-auto">
        <span class=font-weight-bold>ID:</span>
        <span class=text-monospace>{{ user.ID }}</span>
      </div>
    </div>
    <div class="row">
      <p class="col-sm-8">
        {% if user.Profile -%}
        {{ user.Profile|replace("\n", "<br>") }}
        <br>
        {%- else -%}
        <span class=text-danger>(no profile)</span>
        {%- endif %}
      </p>
    </div>
    <div class=row>
      {% if user.GitHub -%}
      <div class="col-sm-2"><span class=font-weight-bold>GitHub:</span></div>
      <div class="col-sm"><span class>{{ user.GitHub }}</span></div>
      {%- endif %}
    </div>
    {% if authorized -%}
    <div class=row>
      <div class="col-sm-2"><span class=font-weight-bold>Primary Email:</span></div>
      <div class="col-sm">{{ user.ContactInformation.PrimaryEmail }}</div>
    </div>
      {% for lbl, attr in [
        ("Secondary Email", "SecondaryEmail"),
        ("Primary Phone", "PrimaryPhone"),
        ("Secondary Phone", "SecondaryPhone"),
        ("IM", "IM")] %}
      {% if user.ContactInformation[attr] %}
      <div class=row>
        <div class="col-sm-2"><span class=font-weight-bold>{{ lbl }}:</span></div>
        <div class="col-sm">{{ user.ContactInformation[attr] }}</div>
      </div>
      {% endif %}
      {% endfor %}
    {%- endif %}
  {% endfor -%}
</div>
{% endblock %}